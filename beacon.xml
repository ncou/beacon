<?xml version="1.0" encoding="UTF-8"?>
<beacon>
  <route>
  	<options>
      <!-- global options -->
  	</options>
    <on path="/" call="Foo::bar" />
    <on path="/users/:name/:surname" call="Foo::bar">
      <options>
        <secure value="true" />
        <method value="post,get" />
        <middleware value="One,Two,Three" />
        <where>
          <name regexp="/\d+/" default="John" />
          <surname regexp="/\w+/" />
        </where>
      </options>
    </on>
    <get path="/api" call="Foo::bar" />
    <group path="/api">
      <post path="/api" call="Foo::bar" />
      <options>
        <!-- group options -->
      </options>
    </group>
    <controller path="/api" call="Foo::bar">
      <options>
        <!-- controller options -->
      </options>
    </controller>
    <resource path="/api" call="Foo::bar"/>
    <domain host="*.example.com">
      <on path="/api" call="Foo::bar" />
      <options>
        <!-- domain options -->
      </options>
    </domain>
  </route>
</beacon>